<fieldset data-type="endowment_line" data-id="<%= f.object.try(:id) %>"
  data-url="<%= intervention_endowment_endowment_line_path(
    f.object.id,
    intervention_id: @intervention.id,
    endowment_id: f.object.endowment_id
  ) %>"
  >
  <div class='row-fluid'>
    <div class='span3 label'>
      <%= f.label :auto_firefighter_name, show_charge_name(f.object.charge) %>
      <%= f.input :charge, as: :hidden %>
    </div>
    <div class='span9'>
      <%= f.input :firefighters_names,
        label: false,
        as: :select,
        collection: [],
        input_html: {
          class: 'span10 multi-autocomplete-field',
          autocomplete: 'off',
          data: {
            selected_ids: f.object.firefighter_ids,
            url:          configs_firefighters_path(format: :json),
            multi_select: [3, 4, 6].include?(f.object.charge)
          }
      } %>
    </div>
  </div>
</fieldset>
