<%= content_tag(
  :h3,
  t(
    'view.commons.between',
    from: l(@from),
    to: l(@to)
  ),
  class: 'print-only'
) %>

<div class="not-printable">
  <%= simple_form_for :interval, html: { method: :get } do |f| %>
    <div class='well'>
      <div class='row-fluid'>
        <div class='span1'>
          <%= t('view.commons.date_filter.start') %>
        </div>
        <div class='span3'>
          <%= f.input :from, as: :datetime_picker, label: false, input_html: {
            value: (l(@from, format: :minimal) if @from)
          } %>
        </div>
        <div class='span1'>
          <%= t('view.commons.date_filter.end') %>
        </div>
        <div class='span3'>
          <%= f.input :to, as: :datetime_picker, label: false, input_html: {
            value: (l(@to, format: :minimal) if @to)
          } %>
        </div>
        <div class='span4'>
          <%= f.button :submit, t('view.commons.date_filter.apply'), class: 'btn btn-inverse' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
