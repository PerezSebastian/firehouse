<div class="<%= special_class %>" id="<%= dom_id(intervention_type) %>">
  <%= link_to( '&#xe008;'.html_safe, new_configs_intervention_type_path(
      father: intervention_type.id), class: 'iconic', remote: true,
      data: { target: 'modal', modal: true }, rel: 'tooltip', title:
      'Agregar una subcategorÃ­a'  ) if( can?( :create, InterventionType ) &&
      special_class == 'type' )%>
  <%= intervention_type.to_s %>
  <span class="pull-right">
    <%= link_to_edit edit_configs_intervention_type_path(intervention_type),
        remote: true, data: { target: 'modal', modal: true } if can? :update,
        intervention_type %>
    <%= link_to_destroy configs_intervention_type_path(intervention_type),
        remote: true, data: { target: dom_id(intervention_type) } if
        can? :destroy, intervention_type %>
  </span>
  <div class="clearfix"></div>
  <div id="<%= dom_id(intervention_type) %>_children">
    <%= render intervention_type.children.order(:priority),
               special_class: 'subtype' if intervention_type.children.any? %>
    <div id="new_<%= dom_id(intervention_type) %>"></div>
  </div>
</div>
