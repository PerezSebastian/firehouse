<%= f.error_notification %>

<div class="form-inputs">
  <div class="row-fluid">
    <div class="span6">
      <%= f.input :firehouse_name, input_html: { value: 'Cuerpo de Bomberos Voluntarios Godoy Cruz', readonly: true  } %>
      <%= f.input :firstname %>
      <%= f.input :lastname %>
      <%= f.input :dni, as: :numeric %>
      <%= f.input :identification %>
      <%= f.input :birth_date, as: :date_picker %>
      <%= f.input :sex, collection: ['Masculino', 'Femenino'], as: :radio_buttons  %>
      <%= f.input :blood_type, collection: ['A', 'B', 'AB', '0'], as: :radio_buttons %>
      <%= f.input :blood_factor, collection: ['Positivo', 'Negativo'], as: :radio_buttons %>
      <%= f.input :started_at, as: :date_picker %>
      <%= f.input :status %>
    </div>
    <div class="span6">
      <%= f.input :education_level, collection: Firefighter::EDUCATION_LEVELS %>
      <%= f.label :hierarchy_id %>
      <%= f.input :auto_hierarchy_name, label: false, input_html: {
        value: @firefighter.hierarchy, class: 'span5 autocomplete-field',
        data: {
          'autocomplete-id-target' => '#firefighter_hierarchy_id',
          'autocomplete-url' => autocomplete_for_hierarchy_name_configs_hierarchies_path(
            format: :json
          )
        }
      } %>
      <%= f.input :hierarchy_id, as: :hidden %>

      <%= f.input :role %>
      <%= f.input :is_active_boss %>
      <%= f.input :is_instructor %>
      <%= f.input :state, collection: Firefighter::STATES  %>
      <%= f.input :city %>
      <%= f.input :address %>
      <%= f.input :linephone, as: :numeric %>
      <%= f.input :cellphone, as: :numeric %>
      <%= f.input :email %>
      <%= f.input :number_of_children, as: :numeric %>
    </div>
  </div>
  <div class="clearfix"></div>
  <%= f.label :user_id %>
  <%= f.input :auto_user_name, label: false, input_html: {
    value: @firefighter.user, class: 'span5 autocomplete-field',
    data: {
      'autocomplete-id-target' => '#firefighter_user_id',
      'autocomplete-url' => autocomplete_for_user_name_users_path(
        format: :json
      )
    }
  } %>
  <%= f.input :organization, input_html: { value: 'CFBVRA' }, as: :hidden %>
  <%= f.input :user_id, as: :hidden %>
</div>
