<% if @firefighters.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list table-hover">
        <thead>
          <tr>
            <th><%= Firefighter.human_attribute_name 'hierarchy' %></th>
            <th><%= Firefighter.human_attribute_name 'lastname' %></th>
            <th><%= Firefighter.human_attribute_name 'firstname' %></th>
            <th><%= Firefighter.human_attribute_name 'identification' %></th>
            <th><%= Firefighter.human_attribute_name 'blood_type' %></th>
            <th><%= Firefighter.human_attribute_name 'status' %></th>
            <th><%= Firefighter.human_attribute_name 'linephone' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="firefighters_table_body">
          <%= render @firefighters %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@firefighters) %>
<% end %>

<div class="form-actions">
  <%= link_to(t('view.firefighters.new', default: :'label.new'), new_configs_firefighter_path,
              class: 'btn btn-primary') if can? :create, Firefighter %>
</div>
